DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

DEFINES += -DHAVE_CONFIG_H

MODULE		= oggplay
LIBRARY_NAME	= oggplay
FORCE_STATIC_LIB= 1

EXPORTS		= \
		oggplay_buffer.h \
		oggplay_callback.h \
		oggplay_data.h \
		std_semaphore.h \
		$(NULL)

CSRCS		= \
		oggplay.c \
		oggplay_callback.c \
		oggplay_query.c \
		oggplay_data.c \
		oggplay_callback_info.c \
		oggplay_buffer.c \
		oggplay_seek.c \
		oggplay_yuv2rgb.c \
		oggplay_tools.c \
		$(NULL)

ifeq ($(OS_ARCH),OS2)
EXPORTS		+= \
		os2_semaphore.h \
		$(NULL)

CSRCS		+= \
		os2_semaphore.c \
		$(NULL)
endif

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES += -I$(srcdir)/../../include/oggplay
