MODULE = 'xpcomsample'

# We must specify CPP_SOURCES in order to link using the proper c++ linker
# on certain platforms.
CPP_SOURCES += [
    'nsTestSample.cpp',
]

# SIMPLE_PROGRAMS compiles a single .cpp file into an executable
SIMPLE_PROGRAMS += [
    "nsTestSample%s" % (CONFIG['BIN_SUFFIX']),
]
